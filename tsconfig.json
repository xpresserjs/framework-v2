{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "declaration": true,
    "isolatedModules": true,
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "@types/node",
    ]
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "package.json"
  ]
}