{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      //      "./src/modules/types",
    ]
  },
  "exclude": [
    "dist",
    "package.json"
  ]
}