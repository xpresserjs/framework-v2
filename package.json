{
  "name": "@xpresser/framework",
  "version": "0.0.2",
  "description": "Xpresser v2 Core",
  "type": "module",
  "repository": "https://github.com/xpresserjs/framework-v2",
  "author": "xpresserjs",
  "license": "MIT",
  "private": false,
  "exports": {
    "./*": "./dist/src/*.js"
  },
  "scripts": {
    "watch": "npx tsc --watch",
    "build": "npm run build:before && npx tsc",
    "build:before": "rm -rf dist",
    "build:after": "rm dist/package.json",
    "dev:ts": "npx nodemon dev/test.ts",
    "dev:ts:cli": "npx nodemon dev/test.ts -- cli ls",
    "dev:js": "npx nodemon dist/dev/test.js",
    "dev:js:cli": "npx nodemon dist/dev/test.js -- cli ls",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=14.16"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.41",
    "nodemon": "^2.0.19",
    "prettier": "^2.6.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsup": "^6.2.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "fs-extra": "^10.1.0",
    "object-collection": "^4.1.3"
  }
}
